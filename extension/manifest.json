{
    "manifest_version": 3,
    "name": "Poseiden",
    "version": "1.0",
    "description": "A Chrome extension to select and view HTML elements on a webpage as markdown.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "inkpx-work-art.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}